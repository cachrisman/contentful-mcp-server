{
  "name": "@contentful/mcp-server",
  "version": "1.6.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/contentful/contentful-mcp-server"
  },
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "bin": {
    "contentful-mcp-server": "./build/cjs/index.js"
  },
  "exports": {
    ".": {
      "types": "./build/esm/library.d.ts",
      "import": "./build/esm/library.js",
      "require": "./build/cjs/library.js"
    },
    "./adapters": {
      "types": "./build/esm/adapters/index.d.ts",
      "import": "./build/esm/adapters/index.js",
      "require": "./build/cjs/adapters/index.js"
    },
    "./adapters/nodeWebSocket": {
      "types": "./build/esm/adapters/nodeWebSocket.d.ts",
      "import": "./build/esm/adapters/nodeWebSocket.js",
      "require": "./build/cjs/adapters/nodeWebSocket.js"
    },
    "./adapters/nodeStreams": {
      "types": "./build/esm/adapters/nodeStreams.d.ts",
      "import": "./build/esm/adapters/nodeStreams.js",
      "require": "./build/cjs/adapters/nodeStreams.js"
    }
  },
  "main": "./build/cjs/library.js",
  "module": "./build/esm/library.js",
  "types": "./build/esm/library.d.ts",
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "clean": "rimraf build",
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "dev": "npm run clean && tsc --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node build/cjs/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "inspect": "node -r dotenv/config ./scripts/inspect.js",
    "inspect:watch": "node ./scripts/inspect-watch.js",
    "logs:watch": "npx mcps-logger",
    "update-licenses": "node scripts/update-licenses.js",
    "prepare": "if [ -d .git ]; then husky; else echo 'Skipping husky in pnpm store'; fi",
    "npm-install": "echo 'Skipping nested npm install; dependencies are managed by the consumer project.'"
  },
  "dependencies": {
    "@anthropic-ai/mcpb": "^1.1.3",
    "@contentful/rich-text-types": "^17.2.4",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "contentful-export": "^7.21.96",
    "contentful-import": "^9.4.124",
    "contentful-management": "^11.61.1",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.0",
    "get-it": "^8.6.10",
    "gpt-tokenizer": "^3.2.0",
    "outdent": "^0.8.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@modelcontextprotocol/inspector": "0.17.2",
    "@nx/js": "^22.0.2",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "mcps-logger": "^1.0.0",
    "nodemon": "^3.1.10",
    "nx": "^22.0.2",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
